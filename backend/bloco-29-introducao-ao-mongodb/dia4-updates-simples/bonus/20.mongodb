// Em apenas uma query, adicione o campo areas com ["Outside"] a todos os Junior Staff que n√£o tenham o campo areas definido.

use('class');
db.xmen.find({
    occupation: 'Junior Staff',
});
db.xmen.updateMany({
    occupation: 'Junior Staff',
    areas: {
        $exists: false
    }
}, {
    $set: {
        areas: ["Outside"],
    },
    $currentDate: {
        lastUpdate: { $type: 'timestamp' }
    }
});